@model Interapp.Web.Areas.Director.ViewModels.Universities.UniversityCreateViewModel
@{
    ViewBag.Title = "Add new university";
}

<h2>Add new university</h2>
<hr />
@using (Html.BeginForm("Add", "Universities", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(u => u.Name)
        @Html.TextBoxFor(u => u.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.TuitionFee)
        @Html.TextBoxFor(u => u.TuitionFee, new { type = "number", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(u => u.CountryId)
        @Html.DropDownListFor(m => m.CountryId, Model.Countries, new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Save" />
        <input type="reset" class="btn btn-warning" value="Clear" />
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}