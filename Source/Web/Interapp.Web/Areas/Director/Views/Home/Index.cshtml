@model IEnumerable<Interapp.Web.Areas.Director.ViewModels.Home.UniversityViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Director's panel</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <h3>My universities</h3>
        @if (Model == null || Model.Count() == 0)
        {
            <h4>You still have no universities.</h4>
        }
        else
        {
            foreach (var university in Model)
            {
                <div class="row">
                    <div class="col-md-6">
                        <h4>@university.Name</h4>
                    </div>
                    <div class="col-md-6">
                        @Html.ActionLink("Details", "Details", "Universities", new { area = "", id = university.Id }, new { @class = "btn btn-success pull-right" })
                        @Html.ActionLink("Edit", "Edit", "Universities", new { id = university.Id }, new { @class = "btn btn-warning pull-right" })
                    </div>
                </div>
                <br />
            }
        }
    </div>
    <div class="col-md-6">
        <h3>Management</h3>
        <div class="row">
            <div class="col-md-8">
                <h4>Documents</h4>
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Manage", "", "Documents", null, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-8">
                <h4>Applications</h4>
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Manage", "All", "Applications", null, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-8">
                <h4>Responses</h4>
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Manage", "", "Responses", null, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-8">
                <h4>University</h4>
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Add", "Add", "Universities", null, new { @class = "btn btn-primary btn-block" })
            </div>
        </div>
    </div>
</div>