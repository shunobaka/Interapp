
@(Html.Kendo().Grid<Interapp.Web.Areas.Admin.Models.UsersViewModels.UserViewModel>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.Id);
          columns.Bound(c => c.FirstName);
          columns.Bound(c => c.LastName);
          columns.Bound(c => c.DateOfBirth);
          columns.Bound(c => c.Email);
          columns.Bound(c => c.UserName);
          columns.Command(command => { command.Edit(); command.Destroy(); });
      })
      .ColumnMenu()
      .Editable(editable => editable.Mode(GridEditMode.PopUp))
      .Pageable()
      .Navigatable()
      .Sortable(sortable =>
      {
          sortable.SortMode(GridSortMode.SingleColumn);
      })
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model =>
          {
              model.Id(p => p.Id);
              model.Field(m => m.Id).Editable(false);
          })
          .Read(read => read.Action("Users_Read", "Users"))
          .Update(update => update.Action("Users_Update", "Users"))
          .Destroy(destroy => destroy.Action("Users_Destroy", "Users"))
      )
)

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
