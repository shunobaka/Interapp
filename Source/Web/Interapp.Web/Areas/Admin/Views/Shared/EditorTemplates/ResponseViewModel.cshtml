@model Interapp.Web.Areas.Admin.ViewModels.Responses.ResponseViewModel

@Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group row">
    <div class="col-md-10 col-md-offset-1">
        <div class="col-md-10">
            @Html.LabelFor(m => m.Content, new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
            </div>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-10 col-md-offset-1">
        <div class="col-md-10">
            @Html.LabelFor(m => m.IsAdmitted, new { @class = "control-label" })
            @Html.CheckBoxFor(m => m.IsAdmitted, null)
        </div>
    </div>
</div>
