@model IList<Interapp.Web.Areas.Student.ViewModels.Responses.ResponseViewModel>
@{
    ViewBag.Title = "All responses";
}

<div class="row">
    <div class="col-md-8">
        <h2>My received responses</h2>
    </div>
    <div class="col-md-4">
        <br />
        @Html.ActionLink("Back to Dashboard", "", "", null, new { @class = "btn btn-success pull-right" })
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @for (var i = 0; i < Model.Count(); i++)
        {
            <div class="col-md-6">
                <h4>@(i + 1). @Model[i].Application.University.Name - @Model[i].Date</h4>
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Details", "Details", "Responses", new { id = Model[i].ApplicationId }, new { @class = "btn btn-primary pull-right" })
            </div>
            <br />
        }
    </div>
</div>
