@model Interapp.Web.Areas.Student.Models.DocumentViewModels.DocumentViewModel
@{
    ViewBag.Title = "Document details";
}

<h2>Details for document</h2>
@Html.ActionLink("Back to dashboard", "", "Dashboard", null, new { @class = "btn btn-success" })
@if (Model != null)
{
    @Html.ActionLink("Edit", "Edit", null, new { @class = "btn btn-warning pull-right" })
    @Html.ActionLink("Delete", "Delete", null, new { @class = "btn btn-danger pull-right" })
}
<hr />
@if (Model == null)
{
    <h4>You don't have such document.</h4>
}
else
{
    @Html.LabelFor(d => d.Name)
    @Html.DisplayTextFor(d => d.Name)
    <br />
    @Html.LabelFor(d => d.Content)
    @Html.DisplayTextFor(d => d.Content)
}