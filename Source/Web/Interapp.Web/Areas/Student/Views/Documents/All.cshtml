@model Interapp.Web.Areas.Student.Models.DocumentViewModels.DocumentsFullViewModel
@{
    ViewBag.Title = "All documents";
}

<h2>Review documents</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <h3>Required documents by universities</h3>
    </div>
    <div class="col-md-6">
        <h3>Your documents</h3>
        @if (Model == null || Model.StudentDocuments.Count == 0)
        {
            <h4>You have no documents.</h4>
        }
        @for (var i = 0; i < Model.StudentDocuments.Count; i++)
        {
            <div class="form-group">
                @Html.LabelFor(d => d.StudentDocuments[i].Name)
                <br />
                @Html.ActionLink("Edit", "Edit", new { id = Model.StudentDocuments[i].Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.StudentDocuments[i].Id }, new { @class = "btn btn-danger" })
            </div>
        }
        <div class="form-group">
            @Html.ActionLink("Create document", "Create", "Documents", new { @class = "btn btn-success" })
        </div>
    </div>
</div>