@{
    ViewBag.Title = "Delete essay";
}

<h2>Delete confirmation</h2>
<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <h3>Are you sure you want to delete your essay?</h3>
        @using (Html.BeginForm("DeletePost", "Essay", FormMethod.Post))
        {
            <input type="submit" value="Yes" class="btn btn-danger" />
            @Html.ActionLink("No", "Review", null, new { @class = "btn btn-success" })
        }
    </div>
</div>