@model Interapp.Web.Areas.Student.Models.UniversitiesViewModels.ApplicationInputViewModel

@using (Html.BeginForm("Submit", "Applications", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UniversityId)
    <div class="form-group row">
        <div class="col-md-4 col-md-offset-4">
            @Html.DropDownListFor(m => m.MajorId, Model.Majors, "Select major", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit application" class="btn btn-success" />
    </div>
}
